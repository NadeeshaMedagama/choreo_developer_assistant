# ============================================
# URL Validation Configuration
# ============================================

# Enable or disable URL validation globally
# When enabled, all URLs in AI responses and sources will be validated
# before being returned to users
# Default: true
ENABLE_URL_VALIDATION=true

# Timeout for URL validation requests in seconds
# This controls how long to wait for each URL to respond
# Higher values = more accurate but slower
# Lower values = faster but may incorrectly mark slow URLs as invalid
# Default: 5
URL_VALIDATION_TIMEOUT=5

# ============================================
# Usage Examples:
# ============================================

# Production (recommended):
# ENABLE_URL_VALIDATION=true
# URL_VALIDATION_TIMEOUT=5

# Development (faster responses, less validation):
# ENABLE_URL_VALIDATION=true
# URL_VALIDATION_TIMEOUT=3

# Disable validation (for testing or performance):
# ENABLE_URL_VALIDATION=false

# High accuracy (for critical applications):
# ENABLE_URL_VALIDATION=true
# URL_VALIDATION_TIMEOUT=10

